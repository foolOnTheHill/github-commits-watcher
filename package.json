  "private": true,
  "main": "app.js",
  "scripts": {
    "lint": "eslint ./",
    "build-client": "npm run --prefix client build",
    "build-server": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./client,./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
